{
  "name": "markdownforge",
  "version": "1.0.0",
  "description": "Forge professional documents from Markdown with DOCX and PDF support, including Mermaid diagrams and admonitions",
  "main": "src/index.js",
  "bin": {
    "markdownforge": "./bin/fileconverter.js"
  },
  "scripts": {
    "start": "node bin/fileconverter.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/ bin/",
    "lint:fix": "eslint src/ tests/ bin/ --fix",
    "format": "prettier --write src/ tests/ bin/",
    "build": "npm run lint && npm run test",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/check-dependencies.js"
  },
  "keywords": [
    "markdown",
    "pdf",
    "docx",
    "converter",
    "mermaid",
    "cli",
    "document",
    "export",
    "pandoc",
    "puppeteer",
    "forge",
    "admonitions",
    "callouts"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/markdownforge.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/markdownforge/issues"
  },
  "homepage": "https://github.com/yourusername/markdownforge#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cosmiconfig": "^8.3.6",
    "debug": "^4.3.4",
    "docx": "^9.5.1",
    "fs-extra": "^11.2.0",
    "joi": "^17.11.0",
    "markdown-it": "^14.0.0",
    "ora": "^5.4.1",
    "puppeteer": "^21.5.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "tmp": "^0.2.1"
  },
  "peerDependencies": {
    "pandoc": "*"
  },
  "peerDependenciesMeta": {
    "pandoc": {
      "optional": false
    }
  },
  "files": [
    "bin/",
    "src/",
    "docs/",
    "scripts/",
    "README.md",
    "LICENSE",
    ".markdownforgerc.example"
  ],
  "preferGlobal": true,
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "bin/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "node/no-unpublished-require": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
